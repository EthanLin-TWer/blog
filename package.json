{
  "name": "linesh-blog",
  "version": "0.0.1",
  "private": true,
  "description": "My blog implemented in different tech stacks.",
  "keywords": ["blog", "react"],
  "author": "Linesh",
  "license": "MIT",
  "scripts": {
    "lint": "eslint index.js scripts src/react",
    "lint:watch": "esw index.js scripts src/react --watch",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --coverage --verbose",
    "sanity": "npm run lint && npm test",
    "start": "npm run start:server & npm run start:jekyll & wait",
    "start:server": "webpack-dev-server --mode development --hot --open",
    "start:jekyll": "rm -rf _site && bundle exec jekyll serve --watch --incremental --verbose",
    "debug": "npm run build:release & npm run start:release & wait",
    "build:release": "onchange 'src/react/**/*.js' -e 'dist' -v -i -- npm run build:react",
    "start:release": "http-server dist -c-1 -i",
    "build:react": "webpack --mode production",
    "deploy:react": "./scripts/deploy-react.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.41",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-decorators": "^7.0.0-rc.1",
    "@babel/polyfill": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-beta.41",
    "@babel/preset-react": "^7.0.0-beta.55",
    "babel-core": "^7.0.0-beta.41",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-jsx-control-statements": "^3.2.8",
    "css-loader": "^1.0.0",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-control-statements": "^2.2.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-watch": "^3.1.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "onchange": "^4.1.0",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.2",
    "redux-devtools-extension": "^2.13.5",
    "style-loader": "^0.22.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "front-matter": "^2.3.0",
    "github-markdown-css": "^2.10.0",
    "lodash": "^4.17.10",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-markdown": "^3.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-syntax-highlighter": "^8.0.1",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "seamless-immutable": "^7.1.3"
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "useBuiltIns": "usage" }],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      ["@babel/plugin-proposal-decorators", { "legacy": true }],
      "jsx-control-statements"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "jest": {
    "testMatch": ["<rootDir>/src/react/**/*.test.js"],
    "setupFiles": ["<rootDir>/enzyme.config.js"],
    "moduleNameMapper": {
      "\\.(styl|css)$": "identity-obj-proxy",
      "github-markdown-css": "identity-obj-proxy"
    },
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": ["<rootDir>/src/react/**/*.js"],
    "coverageThreshold": {
      "global": {
        "statements": 20,
        "branches": 30,
        "functions": 40
      }
    },
    "coverageReporters": ["text"],
    "coverageDirectory": "<rootDir>/coverage/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/hooks/pre-commit.sh",
      "commit-msg": "./scripts/hooks/validate-commit-msg.sh ${HUSKY_GIT_PARAMS}"
    }
  }
}
